<assembly>
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/resources</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <!-- Add License/Notice files -->
    <fileSet>
      <directory>${project.build.directory}/maven-shared-archive-resources/</directory>
      <outputDirectory>bluebird</outputDirectory>
    </fileSet>
    <!-- Add Bootstrap files -->
    <fileSet>
      <directory>${bootstrap-resources-directory}</directory>
      <outputDirectory>bluebird</outputDirectory>
    </fileSet>
    <!-- Add Font Awesome files -->
    <fileSet>
      <directory>${fontawesome-resources-directory}/css</directory>
      <outputDirectory>bluebird/css</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${fontawesome-resources-directory}/font</directory>
      <outputDirectory>bluebird/font</outputDirectory>
    </fileSet>
    <!-- Add Bootwatch files -->
    <fileSet>
      <directory>${bootwatch-resources-directory}</directory>
      <outputDirectory>bluebird/css</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
